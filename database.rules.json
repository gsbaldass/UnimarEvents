{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    "bookings": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$bookingId": {
        ".read": "auth != null",
        ".write": "auth != null && (data.child('user_id').val() == auth.uid || root.child('admin_users').child(auth.uid).exists())"
      }
    },
    "venues": {
      ".read": true,
      ".write": "auth != null && root.child('admin_users').child(auth.uid).exists()"
    },
    "admin_users": {
      ".read": "auth != null && root.child('admin_users').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admin_users').child(auth.uid).exists()"
    }
  }
}